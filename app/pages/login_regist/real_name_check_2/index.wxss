/* 切换登录方式 */

.m-switch {}

.m-switch .box {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    border-radius: 300px;
}

.m-switch .box .item {
    height: 100%;
    flex: 1;
    text-align: center;
    border: 1px solid #e3e5e7;
    background-color: #fff;
}

.m-switch .box .item:first-child {
    border-right: none;
    border-radius: 300rpx 0 0 300rpx;
}

.m-switch .box .item:nth-child(2) {
    border-radius: 0 300rpx 300rpx 0;
}

.m-switch .box .item-1 {
    background-color: #07944a;
    color: #fff;
}


/* 表单 */

.m-form .label {
    width: 130rpx;
    text-align: justify;
}

.m-form .content {
    background-color: #fff;
    padding: 20rpx 16rpx;
    position: relative;
}

.m-form .content-2 {
    padding: 0;
    background-color: transparent;
    position: relative;
    height: 84rpx;
    align-items: center;
}

.m-form .content-2 .g-input {
    padding: 0 20rpx;
}

.m-form .content-2 .g-input,
.m-form .content-2 .g-code {
    background-color: #fff;
    height: 100%;
}

.m-form .content .g-icon {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.m-form .content .g-btn {
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    width: 218rpx;
    background-color: #07944a;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

