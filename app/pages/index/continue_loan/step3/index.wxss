/* 续贷申请信息 */

.m-info {
    border-bottom: 1px solid #e4e9e7;
    padding-bottom: 40rpx;
}

.m-info .content {
    color: #343b36;
}

.m-info .title {
    font-size: 20px;
}

.m-info .subtitle {
    font-size: 17px;
}

/* 拍照上传 */
.m-upload {
    background-color: #fff;
}

.m-upload {
    background-color: #fff;
}

.m-upload .upload {
    position: relative;
    width: 472rpx;
    height: 240rpx;
    margin: 0 auto;
}

.m-upload .upload .image {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 1;
}

.m-upload .upload .image.result {
    z-index: 2;
}

.m-upload .upload .icon-delete {
    position: absolute;
    right: -12rpx;
    top: -12rpx;
    z-index: 3;
}

.m-upload .print-box .item {
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    background-color: #07944a;
    color: #fff;
    margin: 15rpx;
    box-shadow: 0px 3px 7px 0px rgba(7, 148, 74, 0.35);
}

.m-upload .print-box .item:nth-child(1) {
    margin-left: 0
}

.m-upload .print-box .item:nth-child(2) {
    margin-right: 0;
}