.m-form .label {
    width: 130rpx;
    text-align: justify;
}

.m-form .content {
    position: relative;
    background-color: #fff;
    padding: 20rpx 16rpx;
}
.m-form .content>input{
    padding-right: 80rpx;
}
.m-form .content .g-icon{
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}
.m-form .content .input-code {
    padding-right: 220rpx;
}

.m-form .content .g-btn {
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    width: 218rpx;
    background-color: #07944a;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}
